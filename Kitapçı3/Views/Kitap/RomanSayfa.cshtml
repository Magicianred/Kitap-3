@using Kitapçı3.Models
@model List<Roman>
@{
    ViewData["Title"] = "RomanSayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left:360px;">Romanlar</h2>

<table class="table table-bordered">
    <tr>
        <th>Kitap Adı</th>
        <th>Yazar</th>
        <th>Yayınevi</th>
        <th>Fiyat</th>
        <th>İncele</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Kitapad</td>
            <td>@x.Yazar</td>
            <td>@x.Yayınevi</td>
            <td>@x.Fiyat tl</td>
            <td><a href="/Kitap/RomanGetir/@x.ID" class="btn btn-default" style="background-color:gray;">İncele</a></td>
        </tr>
    }

</table>
<br />